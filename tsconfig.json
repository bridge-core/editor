{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": [
			"@types/wicg-file-system-access",
			"node",
			"jest",
			"vite/client",
			"vite-plugin-pwa/client"
		],
		"paths": {
			"/@/*": ["src/*"]
		},
		"lib": ["esnext", "dom", "dom.iterable", "scripthost", "WebWorker"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx",
		"src/utils/glob/picomatch.js"
	],
	"exclude": ["node_modules"]
}
