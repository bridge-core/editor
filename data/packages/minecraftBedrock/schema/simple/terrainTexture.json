{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Terrain Textures",
	"additionalProperties": false,
	"required": [
		"resource_pack_name",
		"texture_name",
		"num_mip_levels",
		"padding"
	],
	"properties": {
		"resource_pack_name": {
			"type": "string"
		},
		"texture_name": {
			"const": "atlas.terrain"
		},
		"padding": {
			"type": "integer"
		},
		"num_mip_levels": {
			"type": "integer"
		},
		"texture_data": {
			"patternProperties": {
				".*": {
					"properties": {
						"textures": {
							"anyOf": [
								{
									"$ref": "../general/reference/paths.json#/definitions/block_texture_paths"
								},
								{
									"type": "array",
									"items": {
										"anyOf": [
											{
												"$ref": "../general/reference/paths.json#/definitions/block_texture_paths"
											},
											{
												"properties": {
													"path": {
														"type": "string"
													},
													"overlay_color": {
														"$ref": "../general/hexColor.json"
													},
													"variations": {
														"type": "array",
														"items": {
															"properties": {
																"weight": {
																	"type": "integer"
																},
																"path": {
																	"$ref": "../general/reference/paths.json#/definitions/block_texture_paths"
																},
																"overlay_color": {
																	"$ref": "../general/hexColor.json"
																}
															}
														}
													},
													"pbr_emissive": {
														"type": "number"
													}
												}
											}
										]
									}
								}
							]
						}
					}
				}
			}
		}
	}
}
