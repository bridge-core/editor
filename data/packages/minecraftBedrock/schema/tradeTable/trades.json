{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "array",
	"items": {
		"properties": {
			"wants": {
				"type": "array",
				"maxItems": 2,
				"minItems": 1,
				"items": {
					"properties": {
						"item": {
							"$ref": "../general/reference/identifiers.json#/definitions/item_identifiers"
						},
						"quantity": {
							"anyOf": [
								{
									"type": "integer"
								},
								{
									"properties": {
										"min": {
											"type": "integer"
										},
										"max": {
											"type": "integer"
										}
									}
								}
							]
						},
						"functions": {
							"$ref": "../lootTable/functions.json"
						},
						"price_multiplier": {
							"type": "number"
						}
					}
				}
			},
			"gives": {
				"type": "array",
				"maxItems": 1,
				"minItems": 1,
				"items": {
					"properties": {
						"item": {
							"$ref": "../general/reference/identifiers.json#/definitions/item_identifiers"
						},
						"quantity": {
							"anyOf": [
								{
									"type": "integer"
								},
								{
									"properties": {
										"min": {
											"type": "integer"
										},
										"max": {
											"type": "integer"
										}
									}
								}
							]
						},
						"functions": {
							"$ref": "../lootTable/functions.json"
						},
						"choice": {
							"type": "array",
							"items": {
								"properties": {
									"item": {
										"$ref": "../general/reference/identifiers.json#/definitions/item_identifiers"
									},
									"quantity": {
										"anyOf": [
											{
												"type": "integer"
											},
											{
												"properties": {
													"min": {
														"type": "integer"
													},
													"max": {
														"type": "integer"
													}
												}
											}
										]
									},
									"functions": {
										"$ref": "../lootTable/functions.json"
									}
								}
							}
						}
					}
				}
			},
			"trader_exp": {
				"type": "number"
			},
			"max_uses": {
				"examples": [-1, 1, 2, 3, 4, 5, 6, 7],
				"type": "number"
			},
			"reward_exp": {
				"type": "boolean"
			}
		}
	}
}
