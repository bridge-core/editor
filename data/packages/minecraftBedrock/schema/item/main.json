{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "bridge.item",
	"title": "Item",
	"type": "object",
	"required": ["format_version", "minecraft:item"],

	"allOf": [
		{
			"properties": {
				"format_version": {
					"anyOf": [
						{
							"$ref": "../project/formatVersionEnum.json"
						},
						{
							"const": "1.10"
						}
					]
				}
			}
		},
		{
			"if": {
				"properties": {
					"format_version": {
						"enum": [
							"1.8.0",
							"1.9.0",
							"1.10.0",
							"1.10",
							"1.11.0",
							"1.12.0",
							"1.13.0",
							"1.14.0",
							"1.16.0"
						]
					}
				}
			},
			"then": {
				"$ref": "./v1.10.0/main.json"
			}
		},
		{
			"if": {
				"properties": {
					"format_version": {
						"enum": [
							"1.16.100",
							"1.16.200",
							"1.16.210",
							"1.16.220",
							"1.17.0",
							"1.17.10"
						]
					}
				}
			},
			"then": {
				"$ref": "./v1.16.100/main.json"
			}
		},
		{
			"if": {
				"properties": {
					"format_version": {
						"const": "1.17.20"
					}
				}
			},
			"then": {
				"$ref": "./v1.17.20/main.json"
			}
		}
	]
}
