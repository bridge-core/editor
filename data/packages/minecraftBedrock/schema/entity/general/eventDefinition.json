{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"properties": {
		"filters": {
			"description": "A filter allows you to set a condition for the event to trigger.",
			"anyOf": [
				{
					"type": "object",
					"$ref": "./filter.json"
				},
				{
					"type": "array",
					"items": {
						"$ref": "./filter.json"
					}
				}
			]
		},
		"target": {
			"$ref": "../../general/filter/subject.json"
		}
	},
	"allOf": [
		{
			"if": {
				"anyOf": [
					{
						"properties": {
							"target": {
								"const": "self",
								"required": ["target"]
							}
						}
					},
					{
						"properties": {
							"target": {
								"type": "null"
							}
						}
					}
				]
			},
			"then": {
				"properties": {
					"event": {
						"$ref": "../dynamic/currentContext/eventEnum.json",
						"description": "Identifier of the event to trigger."
					}
				}
			}
		},
		{
			"if": {
				"properties": {
					"target": {
						"enum": ["other", "target", "baby", "parent", "holder"]
					}
				},
				"required": ["target"]
			},
			"then": {
				"properties": {
					"event": {
						"$ref": "../dynamic/eventEnum.json",
						"description": "Identifier of the event to trigger."
					}
				}
			}
		},
		{
			"if": {
				"properties": {
					"target": {
						"const": "block"
					}
				},
				"required": ["target"]
			},
			"then": {
				"properties": {
					"event": {
						"$ref": "../../block/dynamic/eventEnum.json",
						"description": "Identifier of the event to trigger."
					}
				}
			}
		}
	]
}
