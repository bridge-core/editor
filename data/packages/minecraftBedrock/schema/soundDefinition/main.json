{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Sound Definitions",
	"additionalProperties": false,
	"required": ["format_version"],
	"properties": {
		"format_version": {
			"$ref": "../project/formatVersionEnum.json"
		},
		"sound_definitions": {
			"patternProperties": {
				".*": {
					"additionalProperties": false,
					"properties": {
						"__use_legacy_max_distance": {
							"type": "boolean"
						},
						"category": {
							"type": "string",
							"enum": [
								"ambient",
								"weather",
								"block",
								"hostile",
								"player",
								"neutral",
								"bucket",
								"record",
								"ui",
								"music"
							]
						},
						"min_distance": {
							"type": "number"
						},
						"max_distance": {
							"type": "number"
						},
						"subtitle": {
							"type": "string"
						},
						"sounds": {
							"type": "array",
							"items": {
								"anyOf": [
									{
										"type": "object",
										"properties": {
											"name": {
												"$ref": "../sounds/dynamic/soundPathEnum.json"
											},
											"stream": {
												"type": "boolean"
											},
											"load_on_low_memory": {
												"type": "boolean"
											},
											"volume": {
												"type": "number"
											}
										}
									},
									{
										"$ref": "../sounds/dynamic/soundPathEnum.json"
									}
								]
							}
						}
					}
				}
			}
		}
	}
}
