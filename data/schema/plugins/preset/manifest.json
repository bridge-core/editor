{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Preset Manifest",
	"additionalProperties": false,
	"properties": {
		"display_name": {
			"description": "Name to display inside the preset window.",
			"type": "string"
		},
		"description": {
			"description": "Preset description.",
			"type": "string"
		},
		"icon": {
			"title": "http://materialdesignicons.com/",
			"description": "Icon to show inside of the preset window",
			"pattern": "^mdi-",
			"type": "string"
		},
		"category": {
			"type": "string"
		},
		"requiredModules": {
			"type": "array",
			"items": {
				"type": "string",
				"enum": ["gameTest", "scripting"]
			}
		},
		"targetVersion": {
			"type": "array",
			"minItems": 2,
			"maxItems": 2,
			"items": [
				{
					"type": "string",
					"description": "Format version"
				},
				{
					"type": "string",
					"description": "Operator",
					"enum": [">", ">=", "=", "<", "<="]
				}
			]
		},
		"packTypes": {
			"type": "array",
			"items": {
				"enum": [
					"worldTemplate",
					"behaviorPack",
					"resourcePack",
					"skinPack"
				]
			}
		},
		"additionalModels": {
			"type": "object",
			"patternProperties": {
				".+": {
					"type": "string"
				}
			}
		},
		"fields": {
			"type": "array",
			"items": {
				"type": "array",
				"minItems": 2,
				"maxItems": 3,
				"items": [
					{
						"type": "string",
						"description": "Name of the input."
					},
					{
						"type": "string",
						"description": "Variable for the input value."
					},
					{
						"type": "object",
						"properties": {
							"type": {
								"description": "Type of input.",
								"type": "string",
								"enum": [
									"fileInput",
									"numberInput",
									"textInput",
									"switch",
									"selectInput"
								]
							},
							"default": {
								"description": "Default value for the input.",
								"type": "string"
							},
							"optional": {
								"type": "boolean",
								"description": "Whether or not the input is optional."
							}
						},
						"allOf": [
							{
								"if": {
									"properties": {
										"type": {
											"const": "numberInput"
										}
									}
								},
								"then": {
									"properties": {
										"min": {
											"type": "number"
										},
										"max": {
											"type": "number"
										},
										"step": {
											"type": "number"
										}
									}
								}
							},
							{
								"if": {
									"properties": {
										"type": {
											"const": "fileInput"
										}
									}
								},
								"then": {
									"properties": {
										"accept": {
											"type": "string"
										},
										"icon": {
											"type": "string"
										}
									}
								}
							},
							{
								"if": {
									"properties": {
										"type": {
											"const": "selectInput"
										}
									}
								},
								"then": {
									"properties": {
										"options": {
											"type": "array",
											"items": {
												"type": "string"
											}
										}
									}
								}
							}
						]
					}
				]
			}
		},
		"createFiles": {
			"type": "array",
			"items": {
				"type": "array",
				"minItems": 2,
				"maxItems": 3,
				"items": [
					{
						"type": "string",
						"description": "File name in the preset folder to create."
					},
					{
						"type": "string",
						"description": "Sets the file path, relative to the project's folder, of where to create the file"
					},
					{
						"type": "object",
						"properties": {
							"inject": {
								"type": "array",
								"items": {
									"description": "Variable name defined under fields to inject into the file and file path.",
									"type": "string"
								}
							}
						}
					}
				]
			}
		},
		"expandFiles": {
			"type": "array",
			"items": {
				"type": "array",
				"minItems": 2,
				"maxItems": 3,
				"items": [
					{
						"type": "string",
						"description": "File name in the preset folder to be merged with the target path."
					},
					{
						"type": "string",
						"description": "Sets the file path, relative to the project's folder, of the file to add to."
					},
					{
						"type": "object",
						"properties": {
							"inject": {
								"type": "array",
								"items": {
									"description": "Variable name defined under fields to inject into the file and file path.",
									"type": "string"
								}
							}
						}
					}
				]
			}
		}
	}
}
